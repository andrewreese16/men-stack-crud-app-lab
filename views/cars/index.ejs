<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Cars</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('../partials/nav') %>
    <h1>All Cars</h1>
    <a href="/cars/new" class="create">Create a Car</a>
    <ul>
      <% carDocs.forEach(car => { %>
      <li>
        <a href="/cars/<%= car._id %>"
          ><strong>Model: </strong><%= car.model.toUpperCase() %>
          <strong>Year:</strong> <%= car.year %></a
        >
      </li>
      <% }) %>
    </ul>
  </body>
</html>
